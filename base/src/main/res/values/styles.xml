<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="button.blue_large">
        <item name="pb_colorNormal">@color/accent</item>
        <item name="pb_colorPressed">@color/accent_light</item>
        <item name="pb_cornerRadius">5dp</item>
        <item name="android:textColor">@color/sl_text_first_invert</item>
    </style>
</resources>